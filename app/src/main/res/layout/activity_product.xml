<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductActivity"
    android:background="@drawable/background_2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/imgSlider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp">


            <Spinner
                android:id="@+id/spinKategori"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:autofillHints="Kategori Seçiniz."
                android:background="@drawable/customedittext" />

            <EditText
                android:id="@+id/etBaslik"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/customedittext"
                android:hint="Başlık"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etFiyat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/customedittext"
                android:hint="Ürün Fiyatı"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etAciklama"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/customedittext"
                android:gravity="top"
                android:hint="Ürün Açıklaması"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnStartConversation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:text="Satıcı İle Mesajlaş" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>